<?xml version="1.0"?>
<robot name="diff_drive_bot">

    <!-- BASE LINK -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="1.0 0.5 0.2"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <color rgba="0 0.5 0.5 1"/>
        </visual>
        <collision>
            <geometry>
                <box size="1.0 0.5 0.2"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0">
        </collision>
        <inertial>
            <mass value="1.0">
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertia>
    </link>

    <!-- LEFT WHEEL -->
    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <!-- Rotate cylinder 90deg around X axis -->
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <color rgba="0 0 0 1"/>
        </visual>
        <collision>
        <geometry>
            <cylinder radius="0.1" length="0.05"/>
        </geometry>
        <origin xyz="0 0.25 " rpy="1.5708 0 0"/>
        </collision>
        <inertial>
        <mass value="0.2"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <!-- RIGHT WHEEL -->
    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <color rgba="0 0 0 1"/>
        </visual>
        <collision>
            <geometry>
                <box size="1.0 0.5 0.2"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0">
        </collision>
        <inertial>
            <mass value="1.0">
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertia>
    </link>

    <!-- CASTER WHEEL -->
    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <color rgba="1 0 1 1"/>
        </visual>
        <collision>
            <geometry>
                <box size="1.0 0.5 0.2"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0">
        </collision>
        <inertial>
            <mass value="1.0">
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertia>
    </link>

    <!-- LEFT WHEEL JOINT-->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="0 -0.25 -0.1" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- RIGHT WHEEL JOINT-->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="0 0.25 -0.1" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- CASTER WHEEL JOINT-->
    <joint name="caster_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="caster_wheel_link"/>
        <origin xyz="0.3 0 -0.1" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
    </joint>

</robot>
